[
    
    //////////////////////////////////////////////////////////////
    ///                 TERMINAL SHORTCUTS                     ///
    /////////////////////////////////////////////////////////////
    
    // Create, Delete and Toggle terminal
    {
        "key": "ctrl+shift+alt+meta+w",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "terminal.active"
    },
    {
        "key": "ctrl+shift+alt+meta+e",
        "command": "workbench.action.terminal.new",
        "when": "terminalProcessSupported || terminalWebExtensionContributedProfile"
    },
    {
        "key": "ctrl+shift+alt+meta+q",
        "command": "workbench.action.terminal.kill"
    },
    // Split and Unsplit terminals
    {
        "key": "ctrl+shift+alt+meta+`",
        "command": "workbench.action.terminal.unsplit"
    },
    {
        "key": "ctrl+shift+alt+meta+9",
        "command": "workbench.action.terminal.splitInActiveWorkspace"
    },
    // Move between active terminals
    {
        "key": "ctrl+shift+alt+meta+right",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
    },
    {
        "key": "ctrl+shift+alt+meta+left",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
    },
    // Move between split terminals
    {
        "key": "ctrl+shift+alt+meta+audiovolumeup",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        "key": "ctrl+shift+alt+meta+audiovolumedown",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    // Resize Terminal Up and Down
    {
        "key": "ctrl+shift+alt+meta+[",
        "command": "workbench.action.terminal.resizePaneUp"
    },
    {
        "key": "ctrl+shift+alt+meta+1",
        "command": "workbench.action.terminal.resizePaneDown"
    },
    // Reszie Terminal Left and Right
    {
        "key": "ctrl+shift+alt+meta+2",
        "command": "workbench.action.terminal.resizePaneLeft",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        "key": "ctrl+shift+alt+meta+3",
        "command": "workbench.action.terminal.resizePaneRight",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    // Focus Find and Focus Next / Previous
    {
        "key": "ctrl+shift+alt+meta+a",
        "command": "workbench.action.terminal.focusFind",
        "when": "terminalFindFocused && terminalHasBeenCreated || terminalFindFocused && terminalProcessSupported || terminalFocusInAny && terminalHasBeenCreated || terminalFocusInAny && terminalProcessSupported"
    },
    {
        "key": "ctrl+shift+alt+meta+s",
        "command": "workbench.action.terminal.findNext",
        "when": "terminalFindInputFocused && terminalHasBeenCreated || terminalFindInputFocused && terminalProcessSupported"
    },
    // Scroll to Top and Bottom
    {
        "key": "ctrl+shift+alt+meta+z",
        "command": "workbench.action.terminal.scrollToTop",
        "when": "terminalFocusInAny && terminalHasBeenCreated && !terminalAltBufferActive || terminalFocusInAny && terminalProcessSupported && !terminalAltBufferActive"
    },
    {
        "key": "ctrl+shift+alt+meta+x",
        "command": "workbench.action.terminal.scrollToBottom",
        "when": "terminalFocusInAny && terminalHasBeenCreated && !terminalAltBufferActive || terminalFocusInAny && terminalProcessSupported && !terminalAltBufferActive"
    },
    // Scroll Up and Down by Line
    {
        "key": "ctrl+shift+alt+meta+v",
        "command": "workbench.action.terminal.scrollDown",
        "when": "terminalFocusInAny && terminalHasBeenCreated && !terminalAltBufferActive || terminalFocusInAny && terminalProcessSupported && !terminalAltBufferActive"
    },
    {
        "key": "ctrl+shift+alt+meta+c",
        "command": "workbench.action.terminal.scrollUp",
        "when": "terminalFocusInAny && terminalHasBeenCreated && !terminalAltBufferActive || terminalFocusInAny && terminalProcessSupported && !terminalAltBufferActive"
    },
    // Scroll Up and Down by Page
    {
        "key": "ctrl+shift+alt+meta+d",
        "command": "workbench.action.terminal.scrollUpPage",
        "when": "terminalFocusInAny && terminalHasBeenCreated && !terminalAltBufferActive || terminalFocusInAny && terminalProcessSupported && !terminalAltBufferActive"
    },
    {
        "key": "ctrl+shift+alt+meta+f",
        "command": "workbench.action.terminal.scrollDownPage",
        "when": "terminalFocusInAny && terminalHasBeenCreated && !terminalAltBufferActive || terminalFocusInAny && terminalProcessSupported && !terminalAltBufferActive"
    },
    // Copy Last command Output
    {
        "key": "ctrl+shift+alt+meta+b",
        "command": "workbench.action.terminal.copyLastCommandOutput"
    },
  
    //////////////////////////////////////////////////////////////
    ///                  SEARCH SHORTCUTS                      ///
    /////////////////////////////////////////////////////////////,
    
    // Show commands, Quick Open Files, Run task, List Bookmarks
    {
        "key": "ctrl+shift+alt+,",
        "command": "workbench.action.showCommands"
    },
    {
        "key": "ctrl+shift+alt+h",
        "command": "workbench.action.quickOpen"
    },
    {
        "key": "ctrl+shift+alt+j",
        "command": "workbench.action.tasks.runTask"
    },
    {
        "key": "ctrl+shift+alt+k",
        "command": "bookmarks.listFromAllFiles"
    },

    //////////////////////////////////////////////////////////////
    ///                   VIEW SHORTCUTS                       ///
    /////////////////////////////////////////////////////////////,
 
    // Show Explorer, Souce Control, Extensions, Search and Toggle Side Bar Visibility
    {
        "key": "ctrl+shift+alt+6",
        "command": "workbench.view.explorer",
        "when": "viewContainer.workbench.view.explorer.enabled"
    },
    {
        "key": "ctrl+shift+alt+7",
        "command": "workbench.view.scm",
        "when": "workbench.scm.active"
    },
    {
        "key": "ctrl+shift+alt+8",
        "command": "workbench.view.extensions",
        "when": "viewContainer.workbench.view.extensions.enabled"
    },
    {
        "key": "ctrl+shift+alt+'",
        "command": "workbench.view.search",
        "when": "workbench.view.search.active"
    },
    {
        "key": "ctrl+shift+alt+n",
        "command": "workbench.action.toggleSidebarVisibility"
    },

    {
        "key": "ctrl+shift+alt+0",
        "command": "editor.action.peekDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
    },
    
    {
        "key": "ctrl+shift+alt+m",
        "command": "workbench.action.closeWindow"
    },
    
    {
        "key": "ctrl+shift+alt+l",
        "command": "workbench.action.switchWindow"
    },
    {
        "key": "ctrl+shift+alt+meta+.",
        "command": "workbench.action.closeActiveEditor"
    },
    {
        "key": "ctrl+shift+alt+meta+space",
        "command": "workbench.action.splitEditorToRightGroup"
    }
]